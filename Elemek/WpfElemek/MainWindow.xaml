<Window x:Class="WpfElemek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfElemek"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagridElemek" ColumnWidth="*" IsReadOnly="True"/>
        <WrapPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="textboxVegyjel" FontSize="22" Width="300"/>
            <Button x:Name="buttonKeres" Content="Keresés" FontSize="20" Click="buttonKeres_Click" />
            <Button x:Name="buttonReset" Content="Visszaállít" FontSize="20" Margin="10,0,0,0" Click="buttonReset_Click"/>

        </WrapPanel>

    </Grid>
</Window>
